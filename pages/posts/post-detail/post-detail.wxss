/* pages/posts/post-detail/post-detail.wxss */

.post-detail {
  display: flex;
  flex-direction: column;
}

.post-detail .post-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 175rpx;
  opacity: 0.6;
}

.audio:active {
  opacity: 1;
}

.post-detail-header {
  font-size: 26rpx;
  vertical-align: middle;
  margin: 20rpx 0 20rpx 20rpx;
}

.post-detail-date {
  margin-left: 20rpx;
}

.post-detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.tool {
   margin: 0 20rpx;
   text-align: right;
}

.tool .line {
    border-top: 1px solid #ccc;
    position: relative;
    top: 60rpx;
    z-index: -1;
}
.tool image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-left: 50rpx;
    vertical-align: middle;
}

.post-detail-content {
  color: #666;
  margin: 20rpx 30rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;

}
